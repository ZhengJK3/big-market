<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.chaZ.infrastructure.persistent.dao.IStrategyAwardDao">

    <resultMap id="CaseMap" type="cn.chaZ.infrastructure.persistent.po.StrategyAward">
        <id column="id" property="id"/>
        <id column="strategy_id" property="strategyId"/>
        <id column="award_id" property="awardId"/>
        <id column="award_title" property="awardTitle"/>
        <id column="award_subtitle" property="awardSubtitle"/>
        <id column="award_count" property="awardCount"/>
        <id column="award_count_surplus" property="awardCountSurplus"/>
        <id column="award_rate" property="awardRate"/>
        <id column="rule_models" property="ruleModels"/>
        <id column="sort" property="sort"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="queryStrategyAwardList" resultMap="CaseMap">
        SELECT strategy_id
        FROM strategy_award LIMIT 10
    </select>

    <select id="queryStrategyAwardListByStrategyId" parameterType="java.lang.Long" resultMap="CaseMap">
        SELECT strategy_id, award_id, award_count, award_count_surplus, award_rate
        FROM strategy_award
        where strategy_id = #{strategy_id}
    </select>

    <select id="queryStrategyAwardRuleModels" parameterType="cn.chaZ.infrastructure.persistent.po.StrategyAward"
            resultType="java.lang.String">
        select rule_models
        from strategy_award
        where strategy_id = #{strategyId}
          and award_id = #{awardId}
    </select>

    <update id="updateStrategyAwardStock" parameterType="cn.chaZ.infrastructure.persistent.po.StrategyAward">
        update strategy_award
        set award_count_surplus = award_count_surplus - 1
        where strategy_id = #{strategyId}
          and award_id = #{awardId}
          and award_count_surplus > 0
    </update>

    <select id="queryStrategyAward" parameterType="cn.chaZ.infrastructure.persistent.po.StrategyAward"
            resultMap="CaseMap">
        select strategy_id,
               award_id,
               award_title,
               award_subtitle,
               award_count,
               award_count_surplus,
               award_rate,
               rule_models,
               sort
        from strategy_award
        where strategy_id = #{strategyId}
          and award_id = #{awardId}
    </select>

</mapper>
